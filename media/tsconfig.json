{
  "exclude": ["./gen", "./lib"],
  "compilerOptions": {
    "allowJs": true,
    "composite": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "lib",
    "sourceMap": true,
    "sourceRoot": "src",
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "target": "es6"
  }
}
